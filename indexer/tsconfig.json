{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/generated": ["./.ponder/generated.ts"]
    }
  },
  "include": ["src/**/*", "ponder.config.ts", "ponder.schema.ts", ".ponder/generated.ts"],
  "exclude": ["node_modules", "dist"]
}
